<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Real Estate Photo List View -->
    <record id="view_real_estate_photo_list" model="ir.ui.view">
        <field name="name">real_estate.photo.list</field>
        <field name="model">real_estate.photo</field>
        <field name="arch" type="xml">
            <list string="Property Photos">
                <field name="sequence"/>
                <field name="property_id"/>
                <field name="href"/>
                <field name="title"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="is_primary"/>
            </list>
        </field>
    </record>

    <!-- Real Estate Photo Form View -->
    <record id="view_real_estate_photo_form" model="ir.ui.view">
        <field name="name">real_estate.photo.form</field>
        <field name="model">real_estate.photo</field>
        <field name="arch" type="xml">
            <form string="Property Photo">
                <sheet>
                    <div class="row">
                        <div class="col-lg-8 col-12">
                            <field name="href"
                                   class="w-full rounded-4"
                                   nolabel="1"
                                   colspan="2"
                                   options="{'convert_to_webp': True, 'preview_image': 'preview_href'}"
                                   widget="image_url"/>
                        </div>
                        <div class="col-lg-4 col-12">
                            <group string="Image details">
                                <field name="property_id"/>
                                <field name="title"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="href" widget="url"/>
                                <field name="preview_href" widget="url"/>
                                <field name="is_primary" readonly="1"/>
                                <field name="sequence"/>
                            </group>
                        </div>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Real Estate Photo Tag Form View -->
    <record id="view_real_estate_photo_tag_form" model="ir.ui.view">
        <field name="name">real_estate.photo.tag.form</field>
        <field name="model">real_estate.photo.tag</field>
        <field name="arch" type="xml">
            <form string="Photo Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Real Estate Photo Tag Tree View -->
    <record id="view_real_estate_photo_tag_tree" model="ir.ui.view">
        <field name="name">real_estate.photo.tag.tree</field>
        <field name="model">real_estate.photo.tag</field>
        <field name="arch" type="xml">
            <list string="Photo Tags">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Real Estate Photo Kanban View -->
    <record id="view_real_estate_photo_kanban" model="ir.ui.view">
        <field name="name">real_estate.photo.kanban</field>
        <field name="model">real_estate.photo</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="title"/>
                <field name="href"/>

                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click ">
                            <div class="ratio ratio-16x9 overflow-hidden mb-3">
                                <div class="embed-responsive-item d-flex align-items-center">
                                    <field name="href" widget="image_url"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <div class="o_text_title_left">
                                            <strong class="o_kanban_record_title ">
                                                <field name="title"/>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Real Estate Photo Action -->
    <record id="action_real_estate_photos" model="ir.actions.act_window">
        <field name="name">Property Photos</field>
        <field name="res_model">real_estate.photo</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new property photo
            </p>
        </field>
    </record>

    <!-- Real Estate Photo Tag Action -->
    <record id="action_real_estate_photo_tags" model="ir.actions.act_window">
        <field name="name">Photo Tags</field>
        <field name="res_model">real_estate.photo.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new photo tag
            </p>
        </field>
    </record>
</odoo>