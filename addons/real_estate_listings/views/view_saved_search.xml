<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Saved Search List View -->
    <record id="view_real_estate_saved_search_list" model="ir.ui.view">
        <field name="name">real_estate.saved_search.list</field>
        <field name="model">real_estate.saved_search</field>
        <field name="arch" type="xml">
            <list string="Saved Searches">
                <field name="name"/>
                <field name="location"/>
                <field name="listing_type"/>
                <field name="property_type_list"/>
                <field name="radius"/>
                <field name="past_days"/>
                <field name="beds_min"/>
                <field name="beds_max"/>
                <field name="price_min" widget="monetary"/>
                <field name="price_max" widget="monetary"/>
            </list>
        </field>
    </record>

    <!-- Saved Search Form View -->
    <record id="view_real_estate_saved_search_form" model="ir.ui.view">
        <field name="name">real_estate.saved_search.form</field>
        <field name="model">real_estate.saved_search</field>
        <field name="arch" type="xml">
            <form string="Saved Search">
                <header>
                    <button name="action_run_search" string="Run Search" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Search Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location" placeholder="Enter location (ZIP, City, Address, etc.)"/>
                            <field name="listing_type"/>
                            <field name="property_type_ids" widget="many2many_tags"/>
                            <field name="radius"/>
                        </group>
                        <group>
                            <field name="limit"/>
                            <field name="mls_only"/>
                            <field name="foreclosure"/>
                            <field name="extra_property_data"/>
                            <field name="exclude_pending"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Time Filters">
                            <group>
                                <group>
                                    <field name="past_days"/>
                                    <field name="past_hours"/>
                                </group>
                                <group>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                </group>
                                <group>
                                    <field name="datetime_from"/>
                                    <field name="datetime_to"/>
                                </group>
                            </group>
                        </page>
                        <page string="Property Characteristics">
                            <group>
                                <group>
                                    <field name="beds_min"/>
                                    <field name="beds_max"/>
                                    <field name="baths_min"/>
                                    <field name="baths_max"/>
                                </group>
                                <group>
                                    <field name="sqft_min"/>
                                    <field name="sqft_max"/>
                                    <field name="lot_sqft_min"/>
                                    <field name="lot_sqft_max"/>
                                </group>
                                <group>
                                    <field name="price_min" widget="monetary"/>
                                    <field name="price_max" widget="monetary"/>
                                    <field name="year_built_min"/>
                                    <field name="year_built_max"/>
                                </group>
                            </group>
                        </page>
                        <page string="Sorting">
                            <group>
                                <field name="sort_by"/>
                                <field name="sort_direction"/>
                            </group>
                        </page>
                        <page string="Advanced">
                            <group>
                                <field name="proxy" placeholder="http://user:pass@host:port"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Saved Search Search View -->
    <record id="view_real_estate_saved_search_search" model="ir.ui.view">
        <field name="name">real_estate.saved_search.search</field>
        <field name="model">real_estate.saved_search</field>
        <field name="arch" type="xml">
            <search string="Search Saved Searches">
                <field name="name"/>
                <field name="location"/>
                <field name="property_type_ids"/>
                <filter string="For Sale" name="for_sale" domain="[('listing_type', '=', 'for_sale')]"/>
                <filter string="For Rent" name="for_rent" domain="[('listing_type', '=', 'for_rent')]"/>
                <filter string="Sold" name="sold" domain="[('listing_type', '=', 'sold')]"/>
                <filter string="Pending" name="pending" domain="[('listing_type', '=', 'pending')]"/>
            </search>
        </field>
    </record>

    <!-- Property Type List View -->
    <record id="view_real_estate_saved_search_property_type_list" model="ir.ui.view">
        <field name="name">real_estate.saved_search.property_type.list</field>
        <field name="model">real_estate.saved_search.property_type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- Property Type Form View -->
    <record id="view_real_estate_saved_search_property_type_form" model="ir.ui.view">
        <field name="name">real_estate.saved_search.property_type.form</field>
        <field name="model">real_estate.saved_search.property_type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Saved Search Action Window -->
    <record id="action_real_estate_saved_search" model="ir.actions.act_window">
        <field name="name">Saved Searches</field>
        <field name="res_model">real_estate.saved_search</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_for_sale': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first saved search
            </p>
            <p>
                Save your property search criteria for quick access and automated scraping.
            </p>
        </field>
    </record>

    <!-- Property Type Action Window -->
    <record id="action_real_estate_saved_search_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">real_estate.saved_search.property_type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property type
            </p>
            <p>
                Define property types for saved searches.
            </p>
        </field>
    </record>

</odoo>